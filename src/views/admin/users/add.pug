extend ../../layouts/layout

block content
  +adminLayout
block adminContent
  a.btn.btn-outline-primary.btn-rounded(href='/' + paths[0] + '/' + paths[1]) Back
  form.row.justify-content-center.align-items-center.my-4(method='POST')
    .col-12.col-sm-10.col-md-8.col-lg-6.col-xl-5
      .d-flex.justify-content-center
        button#user-random.btn.btn-info.btn-rounded(type='button') Generate random user
      .form-floating.my-4
        input#email.form-control(type='email' name='email' placeholder="Email" required)
        label.form-label(for='email') Email
      .form-floating.my-4
        input#username.form-control(type='text' name='username' placeholder="Username" required)
        label.form-label(for='username') Username
      .form-floating.my-4
        input#password.form-control(type='text' name='password' placeholder="Password" required)
        label.form-label(for='Password') Password
      input(name='_csrf' type='hidden' value=csrfToken)
      .d-flex.justify-content-center
        button.btn.btn-outline-info.col-auto(type='submit') Add
block scripts
  script.
    function makeid(length) {
        let result = '';
        const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
        const charactersLength = characters.length;
        let counter = 0;
        while (counter < length) {
          result += characters.charAt(Math.floor(Math.random() * charactersLength));
          counter += 1;
        }
        return result;
    }
    $('#user-random').on('click', (e) => {
      $('#email').val(makeid(20) + '@gmail.com')
      $('#username').val(makeid(15))
      $('#password').val(makeid(10))
      $('#email').focus()
      $('#username').focus()
      $('#password').focus()
    })