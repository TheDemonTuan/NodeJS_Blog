extend ../layouts/layout

block content
  a.btn.btn-primary.btn-rounded(href='/' + path[0] + '/' + path[1]) Back
  .col-12.col-sm-6.col-lg-5.col-xl-4.mx-auto.justify-content-center
    form.row.my-4.justify-content-center.align-items-center.g-4(method='POST')
      .form-outline.col-md-6
        input#email.form-control(type='email' name='email' value=user.email required)
        label.form-label(for='email') Email
      .form-outline.col-md-6
        input#username.form-control(type='text' name='username' value=user.username required)
        label.form-label(for='username') Username
      .form-outline.col-md-6
        input#password.form-control(type='text' name='password')
        label.form-label(for='Password') Password
      select.form-select.form-select-lg.mb-3(name='role')
        option(value=0 selected=user.role ? true : false) Member
        option(value=1 selected=user.role ? true : false) Admin
      .form-check.form-switch
        input#status.form-check-input(type='checkbox' role='switch' name='status' checked=user.status ? true : false)
        label.form-check-label(for='status') Status
      input(name='_csrf' type='hidden' value=csrfToken)
      button.btn.btn-success.btn-rounded.col-lg-3(type='submit') Update