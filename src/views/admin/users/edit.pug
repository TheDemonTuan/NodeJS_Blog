extend ../../layouts/layout

block content
  +adminLayout
block adminContent
  a.btn.btn-outline-primary.btn-rounded(href='/' + paths[0] + '/' + paths[1]) Back
  if(user)
    form.row.justify-content-center.align-items-center.my-4(method='POST')
      .col-12.col-sm-10.col-md-8.col-lg-6.col-xl-5
        .form-floating.my-4
          input#email.form-control(type='email' name='email' value=user.email required)
          label.form-label(for='email') Email
        .form-floating.my-4
          input#username.form-control(type='text' name='username' value=user.username required)
          label.form-label(for='username') Username
        .form-floating.my-4
          input#password.form-control(type='text' name='password' placeholder="Password")
          label.form-label(for='Password') Password
        select.form-select.my-4(name='role')
          option(value=0 selected=user.role ? true : false) Member
          option(value=1 selected=user.role ? true : false) Admin
        .form-check.form-switch
          input#status.form-check-input(type='checkbox' role='switch' name='status' checked=user.status ? true : false)
          label.form-check-label(for='status') Status
        input(name='_csrf' type='hidden' value=csrfToken)
        .d-flex.justify-content-center
          button.btn.btn-outline-info.col-auto.my-3(type='submit') Update
  else
    .alert.alert-danger.m-2(role='alert') No user found