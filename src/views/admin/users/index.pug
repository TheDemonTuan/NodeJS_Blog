extend ../layouts/layout

block content
  a.btn.btn-success.my-3.btn-rounded(href='/' + fullPath + '/add') Add
  .table-responsive
    table#usersTable.table.align-middle.mb-0.bg-white.table-hover.text-nowrap
      thead.bg-light
        tr
          th ID
          th Info
          th Created At
          th Role
          th Status
          th Actions
      tbody
        if(users.length)
          each user in users
            tr
              td#user-id.fw-normal #{user.id}
              td
                .d-flex.align-items-center
                  .avatar-circle
                    img(src=user.avatar alt='Avatar')
                  .ms-3
                    p.fw-bold.mb-1 #{user.username}
                    p.text-muted.mb-0 #{user.email}
              td #{new Date(user.createdAt).toLocaleString()}
              td
                if(user.role)
                  span.badge.badge-dark.rounded-pill.d-inline Admin
                else
                  span.badge.badge-light.rounded-pill.d-inline Member
              td
                if(user.status)
                  span.badge.badge-success.rounded-pill.d-inline Active
                else
                  span.badge.badge-danger.rounded-pill.d-inline Deactive
              td
                .col-12.d-flex.justify-content-center.gap-3
                  a.text-primary.action-button(href='/' + fullPath + '/edit/' + user.id)
                    i.fa-regular.fa-pen-to-square.fs-3
                  a.text-danger.action-button(href='/' + fullPath + '/delete/' + user.id)
                    i.fa-regular.fa-trash-can.fs-3
block scripts
  script.
    $(document).ready(function() {
      $('#usersTable').DataTable();
    });