<%- include('partials/header.ejs'); -%>
    <main style="margin-top: 58px">
        <div class="container pt-4">
            <!-- Section: Main chart -->
            <section class="mb-4">
                <div class="card">
                    <div class="card-header text-center py-3">
                        <h5 class="mb-0 text-center">
                            <strong>Categories</strong>
                        </h5>
                    </div>
                    <div class="container card-body py-3">
                        <a class="btn btn-success my-3 btn-rounded" href="/<%-fullPath%>/add">Add</a>
                        <div class="table-responsive">
                            <table class="table align-middle mb-0 bg-white table-hover text-nowrap text-center">
                                <thead class="bg-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Slug</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (categories.length) { %>
                                        <% categories.forEach(element => { %>
                                            <tr>
                                                <td>
                                                    <p class="fw-normal mb-1"><%= element.id %></p>
                                                </td>
                                                <td><%= element.name %></td>
                                                <td><%= element.slug %></td>
                                                <td>
                                                    <% if (element.status) { %>
                                                        <span class="badge badge-success rounded-pill d-inline">Active</span>
                                                    <% } else { %>
                                                        <span class="badge badge-danger rounded-pill d-inline">Inactive</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a type="button" class="btn btn-info btn-rounded" href="/<%-fullPath%>/edit/<%= element.id %>">Edit</a>
                                                    <a type="button" class="btn btn-danger btn-rounded" href="/<%-fullPath%>/delete/<%= element.id %>">Delete</a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan=5>
                                                <span class="badge badge-danger rounded-pill d-inline fs-4">Data not found!</span>
                                            </td>
                                        </tr>
                                    <% } %>
                                      
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
            <!--Section: Sales Performance KPIs-->
            <!-- Section: Main chart -->
        </div>
    </main>
<%- include('partials/footer.ejs'); -%>